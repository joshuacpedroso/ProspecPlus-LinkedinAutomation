<Page x:Class="prospecplus_interface.entities.Views.subs.home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prospecplus_interface.entities.Views.subs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="home">

    <Grid Background="#FF2F2F2F">
        <Button x:Name="iniciar" Content="Iniciar" HorizontalAlignment="Left" Margin="71,0,0,0" Width="164"  Background="#FF232323" Foreground="White" FontSize="22" Height="68" VerticalAlignment="Center" Click="iniciar_Click"/>
        <Button x:Name="continuar" Content="Continuar" HorizontalAlignment="Center" Width="164" Background="#FF232323" Foreground="White" FontSize="22" Height="68" VerticalAlignment="Center" Click="continuar_Click" IsEnabled="False"/>
        <Button x:Name="pararButton" Content="Parar" HorizontalAlignment="Right" Margin="0,0,72,0" Width="164" Background="#FF232323" Foreground="White" FontSize="22" Height="68" VerticalAlignment="Center" IsEnabled="False" Click="pararButton_Click"/>
        <TextBlock x:Name="cronometro" HorizontalAlignment="Center" Margin="0,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="464" Foreground="White" FontSize="24" TextAlignment="Center"/>
    </Grid>
</Page>
